<div class="flex flex-col h-screen"
  data-controller="conversation"
  data-conversation-completion-url-value="<%= room_conversation_completion_path(@room, @conversation) %>"
  >
  <div class="navbar shadow-xs bg-base-100 flex-0">
    <div class="flex-none">
      <a href="<%= room_path(@room) %>" class="btn btn-ghost btn-square">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-left-icon lucide-arrow-left"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
      </a>
    </div>
    <div class="flex-1">
      <div class="text-xl px-2">
        <%= @conversation.title.presence || "Untitled" %>
      </div>
    </div>
  </div>

  <div class="flex-1 overflow-auto flex flex-col-reverse">
    <div class="w-full max-w-3xl mx-auto p-4">
      <div id="messages" class="min-h-screen flex flex-col justify-end" data-conversation-target="messages">
        <%= render partial: "messages/message", collection: @conversation.messages.order(created_at: :asc) %>
      </div>
    </div>
  </div>

  <div class="flex-0">
    <div class="max-w-3xl mx-auto p-4">
      <div class="card bg-base-300 p-4">
        <form data-conversation-target="form" data-action="submit->conversation#completion:prevent">
          <input type="text" name="message[content]" class="input w-full" autocomplete="off">
        </form>
      </div>
    </div>
  </div>
</div>
