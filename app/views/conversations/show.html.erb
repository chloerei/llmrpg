<p style="color: green"><%= notice %></p>

<div class="breadcrumbs">
  <ul>
    <li>
      <a href="<%= room_path(@room) %>">
        <%= @room.name.presence || "Unnamed Room" %>
      </a>
    </li>
    <li>
      <%= @conversation.title.presence || "Untitled" %>
    </li>
  </ul>
</div>

<div class=""
  data-controller="conversation"
  data-conversation-completion-url-value="<%= room_conversation_completion_path(@room, @conversation) %>"
  >
  <div id="messages" class="min-h-screen mt-4" data-conversation-target="messages">
    <%= render partial: "messages/message", collection: @conversation.messages.order(created_at: :asc) %>
  </div>

  <div class="sticky bottom-0">
    <div class="max-w-screen-lg mx-auto pb-4">
      <div class="card bg-base-300 p-4">
        <form data-conversation-target="form" data-action="submit->conversation#completion:prevent">
          <input type="text" name="message[content]" class="input w-full">
        </form>
      </div>
    </div>
  </div>
</div>
