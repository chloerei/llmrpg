<%= form_with(model: conversation) do |form| %>
  <% if conversation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(conversation.errors.count, "error") %> prohibited this conversation from being saved:</h2>

      <ul>
        <% conversation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">
      Personas
    </legend>
    <%= form.collection_select :persona_id, Current.user.personas.all, :id, :name, {}, class: "select" %>
  </fieldset>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">
      Character
    </legend>
    <%= form.collection_select :character_id, Current.user.characters.all, :id, :name, {}, class: "select" %>
  </fieldset>

  <div class="mt-4">
    <button type="submit" class="btn btn-primary">
      <%= conversation.new_record? ? "Create" : "Update" %> Conversation
    </button>
  </div>
<% end %>
