<p style="color: green"><%= notice %></p>

<div class="breadcrumbs text-sm">
  <ul>
    <li>
      <a href="<%= characters_path %>">
        Characters
      </a>
    </li>
    <li>
      <%= @character.name %>
    </li>
  </ul>
</div>

<div class="space-y-4 mt-4">
  <div>
    <div class="font-medium">
      Avatar
    </div>
    <div>
      <%= render "shared/avatar", avatar: @character.avatar, name: @character.name, size: :large %>
    </div>
  </div>

  <div>
    <div class="font-medium">
      Name
    </div>
    <div>
      <%= @character.name %>
    </div>
  </div>

  <div>
    <div class="font-medium">
      Description
    </div>
    <div>
      <%= @character.description %>
    </div>
  </div>
</div>

<div class="flex mt-4">
  <div class="grow">
    <a href="<%= edit_character_path(@character) %>" class="btn btn-soft">
      Edit this character
    </a>
  </div>

  <%= form_with url: character_path(@character), method: :delete do %>
    <button type="submit" class="btn btn-warning">
      Destroy this character
    </button>
  <% end %>
</div>
