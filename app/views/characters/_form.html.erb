<%= form_with(model: character) do |form| %>
  <fieldset class="fieldset">
    <legend class="fieldset-legend">
      Avatar
    </legend>

    <%= render "shared/avatar", character: character, size: :large %>

    <%= form.file_field :avatar, class: "file-input" %>
  </fieldset>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">
      Name
    </legend>
    <%= form.text_field :name, class: "input", required: true %>
    <% if form.object.errors.include?(:name) %>
      <div class="text-error text-sm">
        <%= form.object.errors[:name].first %>
      </div>
    <% end %>
  </fieldset>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">
      Description
    </legend>
    <%= form.text_area :description, class: "textarea" %>
    <% if form.object.errors.include?(:description) %>
      <div class="text-error text-sm">
        <%= form.object.errors[:description].first %>
      </div>
    <% end %>
  </fieldset>

  <div class="mt-4">
    <button type="submit" class="btn btn-primary">
      <%= character.new_record? ? "Create" : "Update" %> Character
    </button>
  </div>
<% end %>
