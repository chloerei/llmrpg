<% content_for :title, "Rooms" %>

<div class="navbar shadow-xs sticky top-0 z-50 bg-base-100">
  <div class="flex-1">
    <div class="text-xl px-2">
      <%= t "general.rooms" %>
    </div>
  </div>
  <div class="flex-none">
    <a href="<%= new_room_path %>" class="btn btn-ghost btn-square">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-plus-icon lucide-plus"><path d="M5 12h14"/><path d="M12 5v14"/></svg>
    </a>
  </div>
</div>

<div class="max-w-3xl mx-auto p-4">
  <div id="rooms" class="list" data-controller="pagination">
    <%= render partial: "room", collection: @rooms, cached: true %>

    <% if @pagy.next %>
      <a href="<%= pagy_url_for(@pagy, @pagy.next) %>" data-pagination-target="nextPageLink" class="block text-sm opacity-80 text-center p-4">
        <%= t "general.loading" %>
      </a>
    <% else %>
      <div class="text-sm opacity-80 text-center p-4">
        <%= t "general.end" %>
      </div>
    <% end %>
  </div>
</div>
