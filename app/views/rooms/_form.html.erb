<%= form_with(model: room) do |form| %>
  <% if room.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">
      Name
    </legend>

    <%= form.text_field :name, class: "input", required: true %>
  </fieldset>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">
      Description
    </legend>

    <%= form.text_area :description, class: "textarea", rows: 3 %>
  </fieldset>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">
      Characters
    </legend>
    <div
      data-controller="character-select"
      data-character-select-options-value="<%= room.user.characters.map { |character| { id: character.id, name: character.name, avatar_url: url_for(character.avatar.variant(:thumb)) } }.to_json %>"
    >
      <%= form.hidden_field :character_list, placeholder: "Add character...", data: { character_select_target: "input" } %>
    </div>
  </fieldset>

  <div class="mt-4">
    <button type="submit" class="btn btn-primary">
      <%= room.new_record? ? "Create Room" : "Update Room" %>
    </button>
  </div>
<% end %>
