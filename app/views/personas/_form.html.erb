<%= form_with(model: persona) do |form| %>
  <% if persona.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(persona.errors.count, "error") %> prohibited this persona from being saved:</h2>

      <ul>
        <% persona.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">
      Name
    </legend>
    <%= form.text_field :name, class: "input" %>
  </fieldset>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">
      Description
    </legend>
    <%= form.text_field :description, class: "textarea" %>
  </fieldset>

  <div class="mt-4">
    <button type="submit" class="btn btn-primary">
      <%= persona.new_record? ? "Create" : "Update" %> Persona
    </button>
  </div>
<% end %>
