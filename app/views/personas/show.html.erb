<p style="color: green"><%= notice %></p>

<div class="breadcrumbs text-sm">
  <ul>
    <li>
      <a href="<%= personas_path %>">
        Personas
      </a>
    </li>
    <li>
      <%= @persona.name %>
    </li>
  </ul>
</div>

<div class="space-y-4 mt-4">
  <div>
    <div class="font-medium">
      Name
    </div>
    <div>
      <%= @persona.name %>
    </div>
  </div>

  <div>
    <div class="font-medium">
      Description
    </div>
    <div>
      <%= @persona.description %>
    </div>
  </div>
</div>

<div class="flex mt-4">
  <div class="grow">
    <a href="<%= edit_persona_path(@persona) %>" class="btn btn-soft">
      Edit this persona
    </a>
  </div>

  <%= form_with url: persona_path(@persona), method: :delete do %>
    <button type="submit" class="btn btn-warning">
      Destroy this persona
    </button>
  <% end %>
</div>
