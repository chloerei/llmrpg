<li class="list-row">
  <div>
    <% if persona.avatar.attached? %>
      <div class="avatar">
        <div class="w-10 rounded-full">
          <%= image_tag persona.avatar.variant(:thumb) %>
        </div>
      </div>
    <% else %>
      <div class="avatar avatar-placeholder">
        <div class="bg-base-300 text-base-content w-10 rounded-full">
          <span class="text-xl"><%= persona.name&.first %></span>
        </div>
      </div>
    <% end %>
  </div>
  <div>
    <a href="<%= persona_path(persona) %>">
      <div class="">
        <%= persona.name %>
      </div>

      <div class="text-sm">
        <%= truncate persona.description %>
      </div>
    </a>
  </div>
  <a href="<%= edit_persona_path(persona) %>" class="btn btn-ghost btn-square">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
    </svg>
  </a>
</li>
