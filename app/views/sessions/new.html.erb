<% @page_title = "Sign in" %>

<div class="hero bg-base-200 min-h-screen">
  <div class="hero-content">
    <div class="w-96">
      <div class="text-center">
        <h1 class="text-3xl font-medium">
          <%= t "general.sign_in" %>
        </h1>
      </div>

      <div class="card bg-base-100 shadow mt-4">
        <div class="card-body">
          <%= form_with url: session_path do |form| %>
            <fieldset class="fieldset">
              <legend class="fieldset-legend">
                <%= t "general.email" %>
              </legend>
              <%= form.email_field :email, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email], class: "input w-full" %>
            </fieldset>

            <fieldset class="fieldset">
              <legend class="fieldset-legend">
                <%= t "general.password" %>
              </legend>
              <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "input w-full" %>
              <a href="<%= new_password_path %>" class="text-sm opacity-80">
                <%= t "general.forgot_password" %>
              </a>
            </fieldset>

            <button type="submit" class="btn btn-primary w-full mt-4">
              <%= t "general.sign_in" %>
            </button>
          <% end %>

        </div>
      </div>

      <div class="text-center mt-4">
        <a href="<%= new_registration_path %>" class=" opacity-80">
          <%= t "general.sign_up" %>
        </a>
      </div>
    </div>
  </div>
</div>
