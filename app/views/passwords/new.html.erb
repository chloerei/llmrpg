<% @page_title = "Password reset" %>

<div class="hero bg-base-200 min-h-screen">
  <div class="hero-content">
    <div class="w-96">
      <div class="text-center">
        <h1 class="text-3xl font-medium">
          <%= t "general.reset_password" %>
        </h1>
      </div>

      <div class="card bg-base-100 shadow mt-4">
        <div class="card-body">
          <%= form_with url: passwords_path do |form| %>
            <fieldset class="fieldset">
              <legend class="fieldset-legend">
                <%= t "general.email" %>
              </legend>
              <%= form.email_field :email, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email], class: "input w-full" %>
            </fieldset>

            <button type="submit" class="btn btn-primary w-full mt-4">
              <%= t "general.send_reset_email" %>
            </button>
          <% end %>
        </div>
      </div>

      <div class="text-center mt-4">
        <a href="<%= new_session_path %>" class=" opacity-80">
          <%= t "general.sign_in" %>
        </a>
      </div>
    </div>
  </div>
</div>
